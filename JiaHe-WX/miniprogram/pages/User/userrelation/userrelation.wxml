<!--miniprogram/pages/User/userrelation/userrelation.wxml-->
<van-cell-group>
  <van-field
    value="{{ username }}"
    label="用户名"
    placeholder="请输入用户名"
     bind:blur="usernameBlur"
  />
  <van-field
    value="{{ phone }}"
    label="手机号"
    placeholder="请输入手机号"
    error-message="{{errormsg}}"
    border="{{ false }}"
    bind:blur="phoneBlur"
  />
<van-field
    value="{{ sms }}"
    center
    clearable
    label="短信验证码"
    placeholder="请输入短信验证码"
    border="{{ false }}"
    use-button-slot
  >
    <van-button slot="button" size="mini" type="primary"
      >发送验证码</van-button
    >
  </van-field>

</van-cell-group>